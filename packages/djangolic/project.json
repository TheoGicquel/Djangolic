{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "packages/djangolic",
    "targets": {
      "install": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
              "pip install -r requirements.txt",
              "npm install"
          ]
        }
      },
      "db-init": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
              "python3 manage.py makemigrations",
              "python3 manage.py loaddata latest.yaml",
              "python3 manage.py migrate --run-syncdb"
          ]
        }
      },

      "setup-env": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            "touch ./djangolic/.env",
            "cat ./djangolic/.env.example > ./djangolic/.env"
          ]
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
              "python3 manage.py runserver 127.0.0.1:8000 --noreload"
            
          ]
        }
      },
      "serve-d": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            {
              "command": "python3 manage.py runserver 127.0.0.1:8000 --noreload &"
            }
          ]
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            {
              "command": "python manage.py tailwind build"
            }
          ]
        }
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            
            "python3 manage.py tailwind start &",
            "python3 manage.py runserver" 
          ]
        }
      },
      "watch-css": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            
            "python manage.py tailwind start"            
          ]
        }
      },

      "make-migrations": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "packages/djangolic",
          "commands": [
            
              "python manage.py makemigrations",
              "python manage.py migrate",
              "python manage.py migrate --run-syncdb"
            
          ]
        }
      }
    },
    "implicitDependencies": []
  }